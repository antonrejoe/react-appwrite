  },
  "module": "dist/index.js",
  "devDependencies": {
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "appwrite": "^5.0.0",
    "esbuild": "^0.14.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tiny-glob": "^0.2.9",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
