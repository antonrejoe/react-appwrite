{
  "name": "react-appwrite-hooks",
  "description": "React hooks for Appwrite.",
  "author": "sanny-io",
  "version": "0.0.2",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "pnpm run build watch",
    "build": "rm -rf dist && tsc && node scripts/build.js",
    "build:production": "pnpm run build production"
