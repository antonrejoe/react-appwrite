{
  "name": "react-appwrite-hooks",
  "description": "React hooks for Appwrite.",
  "author": "sanny-io",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "tsdx watch",
    "createFunctionTag": "wsl appwrite functions createTag --functionId=6185b7c888dae --command='node add.js' --code='functions'",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "exports": {
    ".": "./dist/react-appwrite-hooks.esm.js",
    "./account": "./dist/account/index.js"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src/**/*.ts"
  ],
  "engines": {
    "node": ">=10"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/react-appwrite-hooks.esm.js",
  "size-limit": [
    {
      "path": "dist/react-appwrite-hooks.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-appwrite-hooks.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^6.0.4",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "appwrite": "^5.0.0",
    "husky": "^7.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^6.0.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  }
}